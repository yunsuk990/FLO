<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/locker_album_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/locker_coverImg_iv"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_album_exp2" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/locker_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="LiLac"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/locker_album_cv"
        app:layout_constraintTop_toTopOf="@+id/locker_album_cv" />

    <TextView
        android:id="@+id/locker_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유(IU)"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/locker_album_info_tv"
        app:layout_constraintStart_toStartOf="@+id/locker_album_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/locker_album_title_tv" />

    <TextView
        android:id="@+id/locker_album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.03.25 | 정규 | 댄스 팝"
        android:textSize="12sp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/locker_album_cv"
        app:layout_constraintStart_toStartOf="@+id/locker_album_singer_tv" />

    <ImageView
        android:id="@+id/locker_album_play_iv"
        android:src="@drawable/btn_miniplayer_play"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/locker_album_cv"
        app:layout_constraintEnd_toStartOf="@+id/locker_album_more_iv"
        app:layout_constraintBottom_toBottomOf="@+id/locker_album_cv"/>

    <ImageView
        android:id="@+id/locker_album_more_iv"
        android:src="@drawable/btn_player_more"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@+id/locker_album_cv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/locker_album_cv"/>



</androidx.constraintlayout.widget.ConstraintLayout>