<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/linear1_tv1"
                android:text="01"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/linear1_tv2"
                android:text="TITLE"
                android:visibility="gone"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corner"
                android:textSize="10sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@+id/linear1_tv1"
                app:layout_constraintTop_toTopOf="@+id/linear1_tv1"
                app:layout_constraintBottom_toBottomOf="@+id/linear1_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/linear1_tv3"
                android:text="라일락"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/linear1_tv2"
                app:layout_constraintTop_toTopOf="@+id/linear1_tv2"
                app:layout_constraintBottom_toBottomOf="@+id/linear1_tv2"
                />

            <TextView
                android:id="@+id/linear1_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="3dp"
                android:text="아이유 (IU)"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/linear1_tv1"
                app:layout_constraintTop_toBottomOf="@+id/linear1_tv3" />

            <ImageButton
                android:id="@+id/linear1_ib1"
                android:scaleType="fitXY"
                android:background="@color/white"
                android:src="@drawable/btn_player_more"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@+id/linear1_tv3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/linear1_tv4"/>

            <ImageButton
                android:scaleType="fitXY"
                android:background="@color/white"
                android:src="@drawable/btn_miniplayer_play"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintTop_toTopOf="@+id/linear1_ib1"
                app:layout_constraintEnd_toStartOf="@+id/linear1_ib1"
                app:layout_constraintBottom_toBottomOf="@+id/linear1_ib1"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>